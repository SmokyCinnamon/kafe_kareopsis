OnKeroMenu : all
{
	LOGGING("LOGGING")
	LOGGING("брудны" _in_ ежа)
	LOGGING("LOGGING")
	LOGGING("(брудны)" _in_ ежа)
	LOGGING("LOGGING")
	"\1\b2\![set,autoscroll,disable]"
	"\n[half]\_q"

	if ежа != "" {
		if "брудны" _in_ ежа {}; else {
			"%*\__q[OnUpuscicJezu,%(ежа)]Упускаць %(ежа) на падлогу\__q\n"
		}
		"%*\__q[OnJesciJezu,%(ежа)]Есці %(ежа)\__q\n"
		"%*\__q[OnCharcavacJezu,%(ежа)]Харчаваць %(чалавек) %(ежа)\__q\n"
	}
	"\n[half]%*\q[Гэта ўсё,пустой]\n"
	"%(ежа)\_q"
}

OnDrinkMenu : all
{
	"\2\b2\![set,autoscroll,disable]"
	"\n[half]\_q"

	if напой != "" {
		if "брудны" _in_ напой {}; else {
			"%*\__q[OnKidacNapoj,%(напой)]Кідаць %(напой) на падлогу\__q\n"
		}
		"%*\__q[OnPicNapoj,%(напой)]Піць %(напой)\__q\n"
		"%*\__q[OnCharcavacNapoj,%(напой)]Харчаваць %(чалавек) %(напой)\__q\n"
	}
	"\n[half]%*\q[Гэта ўсё,пустой]\n"
	"%(напой)\_q"
}

