OnUpuscicJezu {
	ежа = "%(ежа) (брудны)"
	case чалавек {
		when "Міша" {
			"\s[9]...! Навошта ты гэта робілі?! Эй- \s[11]не кладіць гэта на *столе*!"
			"\s[9]...! Эй! Чаму ж гэта робілі?! Цяпер- \s[11]-=Чакай!=- Не ставіць гэта на-!"
		}
		when "Жора" {
			"Ах-! Зачем ж гэта сделалі, %(нік)? Я хацеў гэта есц... эм. Не. Не так много хацеў. Можаш... удаліць гэта. З сусвету."
			"Ой! Ну же! Калі так моцна ненавідзілі... эм. Што робіш цяперь."
		}
		others {}
	}
	--; "\x"
	OnKeroMenu
}

/*
	еліБрудны = 0
	харчаваліІмі = 0
	еліІх = 0
	харчаваліБрудны = 0
*/

OnJesciJezu {
		if "брудны" _in_ ежа || чалавекзаказвалі == 1 && "брудны" _in_ ежа {
		еліБрудны++
		case чалавек {
			when "Міша" {
				"\s[4]Ух ты. Гэта... не робіць гэта зноў.\s[1] Ты ж не ведаеш, дзе те кузуркі былі. Або адкуль з'явіліся..."
			}
			when "Жора" {
				"Э-э-э... %(нік), я не хачу быць грубым, але разве гэта не атврацітельны?" //агідны
			}
			others {}
		}
	}
	elseif чалавекзаказвалі == 1 {
		еліІх++
		case чалавек {
			when "Міша" {
				"\s[4]Эх... %(нік), ты можна былі заказвалі сам, калі былі галодныя..."
			}
			when "Жора" {
				"%(нік)! Я ж гэта хацеў! А сейчас ты усё з'елі..."
			}
			others {}
		}
	}
	else {
		case чалавек {
			when "Міша" {
				"Ну? Гэта смачна, ты думаеш?"
			}
			when "Жора" {
				"А, пачакай! Мне можно кусочек? Я нават вельмі галодны..."
			}
			others {}
		}
	}
	--
	"\x"
	ежа = ""
	OnKeroMenu
}

OnCharcavacJezu {
	харчаваліІмі++
	if "брудны" _in_ "%(ежа)" || чалавекзаказвалі == 1 && "брудны" _in_ ежа {
		харчаваліБрудны++
		case чалавек {
			when "Міша" {
				"\s[9]Эй-! \s[11]*Чорт* возьмі, не робі гэта зноў!"
			}
			when "Жора" {
				"Нет-нет-нет это самый дренный вещь в мире а *я* не хачу есть это знов! Я *не хачу*, чуеш?!"
			}
			others {}
		}
	}
	elseif чалавекзаказвалі == 1 {
		case чалавек {
			when "Міша" {
				"\s[11]Эй! *сука*, не робі гэта зноў!"
			}
			when "Жора" {
				"Гэта не ветлівы, %(нік)! Што, калі я не хацеў то есці?"
			}
			others {}
		}
	}
	else {
		case чалавек {
			when "Міша" {
				"\s[9]Эх-! \s[9]Табе што, падабаецце гэта?\s[8] Не робі зноў."
			}
			when "Жора" {
				"Гэта не ветлівы, %(нік)! А ўсё яшче твоя ежа... ведаеш, я бы еў калі спыталі - табе не трэба карміць мяне як какую ту сабачку!"
			}
			others {}
		}
	}
	--
	"\x"
	ежа = ""
	OnKeroMenu
}

